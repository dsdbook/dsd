#!/bin/bash
if [ -e work ]
then
	\rm -rf work
fi

#verdi env setting
export PLATFORM=LINUX
export NOVAS_INST_DIR=/opt/spring/verdi
export LD_LIBRARY_PATH=$NOVAS_INST_DIR/share/PLI/lib/$PLATFORM:$LD_LIBRARY_PATH

vlib work
vmap work work
vlog +nowarnBSOB +nowarnRDGN -f ./vlog.args

vsim -pli $NOVAS_INST_DIR/share/PLI/MODELSIM/$PLATFORM/novas_fli.so  work.wb_tb -c -do sim.do
